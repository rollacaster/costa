{
  "name": "costa",
  "version": "0.1.1",
  "description": "Keep track of your daily costs across all devices.",
  "main": "server.js",
  "scripts": {
    "start": "webpack;cross-env NODE_ENV=production npm run start:server",
    "start:server": "./node_modules/babel-cli/bin/babel-node.js src/server/index.js",
    "build": "npm run build:server; npm run build:dashboard",
    "build:server" : "./node_modules/babel-cli/bin/babel.js 'src/**/*.js?(x)' -d build/",
    "build:dashboard" : "webpack",
    "develop": "npm run start:server & gulp develop:hot & npm run test:watch",
    "test": "npm run test:unit; npm run lint;cross-env NODE_ENV=test gulp test:integration",
    "test:watch": "mocha 'src/**/*.spec.js?(x)' -w --require babel-core/register",
    "test:unit": "mocha 'src/**/*.spec.js?(x)' --require babel-core/register",
    "test:integration": "cross-env NODE_ENV=test mocha 'src/test/**/*.test.js' --require babel-core/register",
    "lint": "standard src/",
    "coverage": "./node_modules/babel-cli/bin/babel-node.js ./node_modules/.bin/babel-istanbul cover _mocha 'src/**/*.spec.js?(x)' --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "reset": "npm run reset:dependencies",
    "reset:dependencies": "rm -rf ./node_modules/; npm i"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rollacaster/costa.git"
  },
  "keywords": [
    "Costs",
    "Tracking"
  ],
  "author": "Thomas Sojka",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.14.2",
    "classnames": "^2.2.3",
    "cron": "^1.1.0",
    "express": "^4.13.3",
    "formsy-react": "^0.17.0",
    "highland": "^2.6.0",
    "immutable": "^3.7.6",
    "material-design-lite": "^1.0.6",
    "mongodb": "^2.1.3",
    "radium": "^0.16.5",
    "ramda": "^0.19.1",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.0.5",
    "serve-favicon": "^2.3.0",
    "uuid": "^2.0.1",
    "ws": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-istanbul": "^0.6.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "cross-env": "^1.0.7",
    "gulp": "^3.9.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "jsx-chai": "^2.0.0",
    "mocha": "^2.3.4",
    "react-addons-test-utils": "^0.14.6",
    "react-hot-loader": "^1.3.0",
    "standard": "^5.4.1",
    "webpack": "^1.12.11",
    "webpack-dev-server": "^1.14.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "WebSocket"
    ]
  }
}
