{
  "name": "costa",
  "version": "0.0.1",
  "description": "Keep track of your daily costs across all devices.",
  "main": "server.js",
  "scripts": {
    "start": "npm run start:server",
    "start:server": "babel-node src/server",
    "test": "npm run test:unit; npm run lint; ./node_modules/.bin/gulp test:integration",
    "test:watch": "./node_modules/.bin/mocha 'src/**/*.spec.js' b--require babel-core/register -w",
    "test:unit": "./node_modules/.bin/mocha 'src/**/*.spec.js' --require babel-core/register",
    "test:integration": "cross-env NODE_ENV=test ./node_modules/.bin/mocha 'src/test/**/*.test.js' --require babel-core/register",
    "lint": "./node_modules/.bin/standard",
    "coverage": "./node_modules/.bin/babel-istanbul cover ./node_modules/.bin/_mocha  'src/**/*.spec.js'",
    "reset": "npm run reset:dependencies",
    "reset:dependencies": "rm -rf ./node_modules/; npm i"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rollacaster/costa.git"
  },
  "keywords": [
    "Costs",
    "Tracking"
  ],
  "author": "Thomas Sojka",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.14.2",
    "express": "^4.13.3",
    "highland": "^2.6.0",
    "immutable": "^3.7.6",
    "mongodb": "^2.1.3",
    "redux": "^3.0.5",
    "serve-favicon": "^2.3.0",
    "ws": "^1.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.4.0",
    "babel-istanbul": "^0.6.0",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "cross-env": "^1.0.7",
    "gulp": "^3.9.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "standard": "^5.4.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "WebSocket"
    ]
  }
}
