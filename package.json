{
  "name": "costa",
  "version": "0.3.0",
  "description": "Keep track of your daily costs across all devices.",
  "main": "server.js",
  "scripts": {
    "prestart": "npm install",
    "start": "cross-env NODE_ENV=production npm-run-all build start:server",
    "start:server": "node src/server/index.js",
    "build": "cross-env NODE_ENV=production  webpack",
    "develop": "webpack; npm run start:server & npm run develop:hot",
    "develop:hot": "webpack-dev-server --hot --inline --content-base static --port 4000",
    "test": "npm-run-all test:*",
    "test:dashboard": "cross-env NODE_ENV=test mocha 'src/dashboard/**/*.spec.js' --compilers js:babel-core/register",
    "test:server": "cross-env NODE_ENV=test mocha 'src/server/**/*.spec.js'",
    "test:integration": "cross-env NODE_ENV=test mocha 'src/test/**/*.test.js'",
    "test:mobile": "cross-env NODE_ENV=test mocha 'src/mobile/**/*.spec.js' -r react-native-mock/mock -r src/mobile/mocks --compilers js:babel-core/register",
    "test:lint": "standard src/**/*",
    "coverage": "npm-run-all coverage:*",
    "coverage:run": "babel-istanbul cover ./node_modules/.bin/_mocha 'src/**/*.spec.js' --report lcovonly -- -R spec -r src/mobile/mocks.js -r react-native-mock/mock.js",
    "coverage:send": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "coverage:clean": "rm -rf ./coverage",
    "deploy": "pm2 deploy ecosystem.json production",
    "deploy:develop": "pm2 deploy ecosystem.json develop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rollacaster/costa.git"
  },
  "keywords": [
    "Costs",
    "Tracking"
  ],
  "author": "Thomas Sojka",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.14.2",
    "c3": "^0.4.11-rc4",
    "classnames": "^2.2.3",
    "cron": "^1.1.0",
    "express": "^4.13.3",
    "formsy-react": "^0.18.0",
    "immutable": "^3.7.6",
    "material-design-lite": "^1.0.6",
    "moment": "^2.11.1",
    "mongodb": "^2.1.18",
    "pathseg": "^1.0.2",
    "prop-types": "^15.5.10",
    "radium": "^0.17.1",
    "ramda": "^0.21.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-native": "^0.27.2",
    "react-router": "^2.0.0",
    "realm": "^0.13.2",
    "redux": "^3.0.5",
    "serve-favicon": "^2.3.0",
    "uuid": "^2.0.1",
    "ws": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.9.1",
    "babel-istanbul": "^0.8.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-native": "^1.4.0",
    "babel-runtime": "^6.6.1",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "cross-env": "^1.0.7",
    "enzyme": "^2.0.0",
    "gulp": "^3.9.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "jsdom": "^9.2.1",
    "jsx-chai": "^4.0.0",
    "mocha": "^2.3.4",
    "npm-run-all": "^2.1.1",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "react-native-mock": "^0.2.3",
    "sinon": "^1.17.3",
    "standard": "^7.1.2",
    "webpack": "^1.12.11",
    "webpack-dev-server": "^1.14.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "WebSocket",
      "shallow",
      "mount",
      "expect",
      "spy",
      "before",
      "after"
    ]
  }
}
